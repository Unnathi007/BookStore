<div class="book-content" style="padding: 155px 170px 20px 170px;">
    <div class="row">
        {{#each data}}
       <div class="col-sm-3">
            <div class="card" style="width:230px;height:400px">
                <img style="width:228px;height:230px" src="{{this.imagepath}}" class="card-img-top" alt="...">
                <div class="card-body">
                    {{#if this.bestSeller}}
                    <p style="font-size:25px;color:darkgoldenrod"><i class="fa fa-star" aria-hidden="true"></i>&nbsp;Best Seller</p>
                    {{/if}}
                    <span>
                        <h6 class="book-name">{{this.title}}</h6><br>
                        <p class="para"><span style="color:grey">price: </span>&#8377;{{this.price}}<br>
                            <button class="cartbtn btn store"value="{{this._id}}"><a href="/addbook/{{this._id}}">Add to Cart</a></button><a class="details" href="/details/{{this._id}}">Details</a></p>
                    </span>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>