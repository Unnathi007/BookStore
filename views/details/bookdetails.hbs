<h1>{{error}}</h1>
<div class="book-content" style="padding: 200px 170px 100px 170px;">
    {{#each data}}
    <div class="row">
        <div class="col-md-5">
            <img style="width:300px;height:300px" src="{{this.imagepath}}" class="card-img-top" alt="...">
        </div>
        <div class="col-md-7">
            {{#if this.bestSeller}}
                    <p style="font-size:30px;color:darkgoldenrod"><i class="fa fa-star" aria-hidden="true"></i>&nbsp;Best Seller</p>
            {{/if}}
            <h1 style="color:brown;font-weight:bold;padding-bottom:10px">{{this.title}}</h1>
            <h4 style="color:black;font-weight:bold;">Product Details</h4>
            <ul style="list-style-type: none">
                <li><span style="font-weight:bold">Description:&nbsp;</span>{{this.description}}</li>
                <li style="margin-top:3px"><span style="font-weight:bold">Author:&nbsp;</span>{{this.author}}</li>
                <li><span style="font-weight:bold">ISBN:&nbsp;</span>{{this.isbn}}</li>
                <li><span style="font-weight:bold">Rating:&nbsp;</span>{{this.rating}}</li>
                <li><span style="font-weight:bold">Publisher:&nbsp;</span>{{this.publisher}}</li>
                <li><span style="font-weight:bold">Category:&nbsp;</span>{{this.Category}}</li>
                <li><span style="font-weight:bold">Price:&nbsp;</span>{{this.price}}</li>
                {{#if this.bestSeller}}
                <li><span style="font-weight:bold">Best Seller</li>
                {{/if}}
            </ul>
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <table id="cart-content" class="table" cellspacing="0">
                        <thead class="thead">
                            <tr>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="cart-content">
                                <td><button class="cartbtn btn store" value="{{this._id}}"style="color:black"><a href="/addbook/{{this._id}}">Add to Cart</a></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            </p>
        </div>
    </div>
    {{/each}}
</div>